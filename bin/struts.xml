<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
    <constant name="struts.enable.DynamicMethodInvocation" value="false" />
    <constant name="struts.devMode" value="true" />
	<package name="example" namespace="/" extends="json-default">
		<action name="chinaDate"  class="cn.jagl.util.ChinaDateAction">
			<!-- 配置类型的json的Result -->
			<result type="json">
				<!-- 为该Result指定参数 -->
				<param name="noCache">true</param>
				<param name="contentType">text/html</param>
				<!-- 设置只序列Action的map属性 -->
				<!--  param name="root">today</param -->
			</result>
		</action>	
		<action name="addAction"  class="cn.jagl.aq.action.DepartmentAction">
			<!-- 配置类型的json的Result -->
			<result type="json">
				<!-- 为该Result指定参数 -->
				<param name="noCache">true</param>
				<param name="contentType">text/html</param>
				<!-- 设置只序列Action的map属性 -->		
				<!--<param name="root">departments</param>-->
			</result>
		</action>
				
	</package>
    <package name="default" namespace="/" extends="struts-default">
        <action name="uploadFile"  class="cn.jagl.aq.action.UploadAction" >
              	
			<param name="savePath">/uploadFiles</param>
			<!-- 配置Struts 2默认的视图页面 -->
			<result>/WEB-INF/view/suc.jsp</result>	
		</action>
        <action name="*">
			<result>/WEB-INF/view/{1}.jsp</result>
			
		</action>
    </package>
</struts>
